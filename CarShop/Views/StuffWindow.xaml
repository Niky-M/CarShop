<Window x:Class="CarShop.Views.StuffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarShop.Views"
        mc:Ignorable="d"
        Title="StuffWindow" Height="800" Width="1200">
    <Border  BorderThickness="10" BorderBrush="#FF4D4C4F">
        <Grid Background="#FF93275D" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Background="#FF4D4C4F">
                <Button Grid.Row="0" Content="Купленные" FontSize="25" Margin="5" Click="ShopButton"/>
                <Button Grid.Row="1" Content="В наличии" FontSize="25" Margin="5" Click="CarsButton"/>
                <Button Grid.Row="3" Content="Клиенты" FontSize="25" Margin="5" Click="ClientButton"/>
                <Button Grid.Row="4" Content="Сотрудники" FontSize="25" Margin="5" IsEnabled="False" Foreground="#FFAA9898"/>
                <Button Grid.Row="5" Content="Прибыль" FontSize="25" Margin="5" Click="ProfitButton"/>
            </StackPanel>

            <Grid Height="720" Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <Label Content="Добавление сотрудника" HorizontalAlignment="Center"/>
                    <Label Content="ФИО:" Margin="5"/>
                    <TextBox x:Name="stuffName" Margin="10 5"/>
                    <Label Content="Телефон:" Margin="5"/>
                    <TextBox x:Name="stuffPhone" Margin="10 5"/>
                    <Label Content="Паспорт:" Margin="5"/>
                    <TextBox x:Name="stuffData" Margin="10 5"/>
                    <Button x:Name="add" Content="добавить сотрудника" Click="ButtonAddClick" Margin="10 20"/>
                </StackPanel>

                <DataGrid x:Name="dataGrid1" ItemsSource="{Binding Clients}" SelectedItem="{ Binding SelectedClient}" AutoGenerateColumns="False" Grid.Column="1" Grid.RowSpan="6" Margin="5" IsReadOnly="True">
                    <DataGrid.ContextMenu>
                        <ContextMenu StaysOpen="True" Background="WhiteSmoke">
                            <MenuItem Header="Удалить" Click="ButtonDeleteClick"/>
                            <MenuItem Header="Изменить" Click="ButtonChangeClick"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding PassportID}"/>
                        <DataGridTextColumn Header="ФИО" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}"/>
                        <DataGridTextColumn Header="Логин" Binding="{Binding Passport}"/>
                        <DataGridTextColumn Header="Количество проданных автомобилей" Binding="{Binding Weight}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Window>
